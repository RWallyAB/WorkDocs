{
    "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
    "elmType": "div",
    "children": [
      {
        "elmType": "img",
        "style": {
          "width": "32px",
          "height": "32px",
          "overflow": "hidden",
          "border-radius": "50%",
          "margin": "2px"
        },
        "attributes": {
          "src": "=getUserImage([$OpsRep.email], 's')",
          "title": ""
        }
      },
      {
        "elmType": "span",
        "style": {
          "vertical-align": "middle",
          "margin-left": "2px"
        },
        "txtContent": "=substring([$OpsRep.title], indexOf([$OpsRep.title], 'USARMY') - 1, 0)"
      }
    ],
    "defaultHoverField": "[$OpsRep]"
  }